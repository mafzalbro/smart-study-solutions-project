{
    "version": 2,
    "builds": [
        { "src": "backend/package.json", "use": "@vercel/node" },
      { "src": "frontend/package.json", "use": "@vercel/next" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/app.js" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  